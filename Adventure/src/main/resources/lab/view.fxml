<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="680.0" prefWidth="1263.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab.Controller">
   <center>
      <Canvas fx:id="canvas" height="600.0" width="800.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <effect>
            <DropShadow />
         </effect></Canvas>
   </center>
   <left>
      <VBox fx:id="inventory" prefHeight="600.0" prefWidth="192.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="17.0" prefWidth="88.0" text="Inventory">
               <VBox.margin>
                  <Insets left="70.0" />
               </VBox.margin>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="600.0" prefWidth="274.0">
         <children>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="199.0" text="Stats" />
            <HBox prefHeight="38.0" prefWidth="200.0">
               <children>
                  <Label text="Player name" />
                  <Text fx:id="playerName" strokeType="OUTSIDE" strokeWidth="0.0">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Text>
               </children>
            </HBox>
            <HBox prefHeight="97.0" prefWidth="200.0">
               <children>
                  <Label text="HP  " />
                  <Text fx:id="current_HP" strokeType="OUTSIDE" strokeWidth="0.0" text="000" textAlignment="CENTER" />
                  <Label prefHeight="17.0" prefWidth="3.0" text="/" />
                  <Text fx:id="max_HP" strokeType="OUTSIDE" strokeWidth="0.0" text="000" textAlignment="CENTER" />
               </children>
            </HBox>
            <TextArea fx:id="output" editable="false" focusTraversable="false" prefHeight="420.0" prefWidth="257.0" />
         </children>
         <padding>
            <Insets bottom="5.0" left="7.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TextField fx:id="commandEntry" onAction="#enterButtonAction" prefHeight="25.0" prefWidth="617.0">
               <HBox.margin>
                  <Insets left="190.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="enterButton" mnemonicParsing="false" onAction="#enterButtonAction" prefHeight="25.0" prefWidth="185.0" text="Enter" />
         </children>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#saveGameAction" text="Save game">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#loadGameAction" text="Load game" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="endGameButton" focusTraversable="false" mnemonicParsing="false" onAction="#endGameAction" prefHeight="25.0" prefWidth="100.0" text="End Game" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </top>
</BorderPane>
